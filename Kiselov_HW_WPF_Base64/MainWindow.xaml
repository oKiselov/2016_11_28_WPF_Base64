<Window x:Class="Kiselov_HW_WPF_Base64.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kiselov_HW_WPF_Base64"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80*"/>
            <ColumnDefinition Width="20*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"></RowDefinition>
            <RowDefinition Height="45*"/>
            <RowDefinition Height="45*"/>
        </Grid.RowDefinitions>
        <Button Grid.Column="1" Grid.Row="0" Grid.RowSpan="3" Background="Aquamarine" 
                Content="Convert" Name="ButtonConvert" Click="ButtonConvert_OnClick"/> 
        <TextBox Grid.Column="0" Grid.Row="1" Name="TextBoxConvertFrom"></TextBox>
        <TextBox Grid.Column="0" Grid.Row="2" Name="TextBoxConvertTo"></TextBox>
        <StackPanel Grid.Column="0" Grid.Row="0">
            <RadioButton Content="From Text toooooo" Name="RadioButtonTo"/>
            <RadioButton Content="From Base64" Name="RadioButtonFrom"/>
        </StackPanel>
    </Grid>
</Window>
